{
  "name": "cr-asst",
  "type": "module",
  "version": "0.13.1",
  "packageManager": "pnpm@10.6.3",
  "description": "Review your code changes with AI assistants.",
  "author": "mys1024",
  "license": "MIT",
  "homepage": "https://github.com/mys1024/cr-asst#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mys1024/cr-asst.git"
  },
  "keywords": [
    "AI",
    "assistant",
    "code review",
    "LLM",
    "CI/CD"
  ],
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "cr-asst": "dist/cli/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "cli": "tsx src/cli/index.ts",
    "cli:watch": "tsx watch src/cli/index.ts",
    "build": "unbuild",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:cover": "vitest run --coverage",
    "check": "run-p check:*",
    "check:type": "tsc --noEmit",
    "check:lint": "eslint .",
    "check:format": "prettier --check .",
    "taze": "taze -I",
    "release": "bumpp"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "execa": "9.3.1",
    "openai": "^4.87.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.13.10",
    "@vitest/coverage-v8": "^3.0.8",
    "bump": "^0.2.5",
    "bumpp": "^10.1.0",
    "eslint": "^9.22.0",
    "lint-staged": "^15.5.0",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.5.3",
    "simple-git-hooks": "^2.11.1",
    "taze": "^18.7.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "unbuild": "^3.5.0",
    "vitest": "^3.0.8"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm test && pnpm check:type && pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "eslint --fix .",
      "prettier --write ."
    ]
  }
}
