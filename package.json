{
  "name": "cr-asst",
  "type": "module",
  "version": "0.10.1",
  "packageManager": "pnpm@10.5.2",
  "description": "Review your code changes with AI assistant.",
  "author": "mys1024",
  "license": "MIT",
  "homepage": "https://github.com/mys1024/cr-asst#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mys1024/cr-asst.git"
  },
  "keywords": [
    "AI",
    "assistant",
    "code review",
    "LLM",
    "CI/CD"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "cr-asst": "./dist/cli.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "cli": "tsx src/cli.ts",
    "cli:watch": "tsx watch src/cli.ts",
    "build": "unbuild",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:cover": "vitest run --coverage",
    "check": "run-p check:*",
    "check:type": "tsc --noEmit",
    "check:lint": "eslint .",
    "check:format": "prettier --check .",
    "taze": "taze -I",
    "prepare": "simple-git-hooks",
    "release": "bumpp"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "execa": "^9.5.2",
    "openai": "^4.86.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/node": "^22.13.5",
    "@vitest/coverage-v8": "^3.0.7",
    "bump": "^0.2.5",
    "bumpp": "^10.0.3",
    "eslint": "^9.21.0",
    "lint-staged": "^15.4.3",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.5.2",
    "simple-git-hooks": "^2.11.1",
    "taze": "^18.6.0",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.25.0",
    "unbuild": "^3.5.0",
    "vitest": "^3.0.7"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm test && pnpm check:type && pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "eslint --fix .",
      "prettier --write ."
    ]
  }
}
