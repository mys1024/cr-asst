{
  "name": "cr-asst",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.12.4",
  "description": "Review your code changes with AI assistants.",
  "author": "mys1024",
  "license": "MIT",
  "homepage": "https://github.com/mys1024/cr-asst#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mys1024/cr-asst.git"
  },
  "keywords": [
    "AI",
    "assistant",
    "code review",
    "LLM",
    "CI/CD"
  ],
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "cr-asst": "dist/cli/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "cli": "tsx src/cli/index.ts",
    "cli:watch": "tsx watch src/cli/index.ts",
    "build": "unbuild",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:cover": "vitest run --coverage",
    "check": "run-p check:*",
    "check:type": "tsc --noEmit",
    "check:lint": "eslint .",
    "check:format": "prettier --check .",
    "taze": "taze -I",
    "prepare": "simple-git-hooks",
    "release": "bumpp"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/deepseek": "^0.2.14",
    "@ai-sdk/google": "^1.2.22",
    "@ai-sdk/openai": "^1.3.22",
    "@ai-sdk/xai": "^1.2.16",
    "ai": "^4.3.16",
    "commander": "^14.0.0",
    "dotenv": "^17.0.1",
    "execa": "9.3.1",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.0.10",
    "@vitest/coverage-v8": "^3.2.4",
    "bump": "^0.2.5",
    "bumpp": "^10.2.0",
    "eslint": "^9.30.1",
    "lint-staged": "^16.1.2",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.0",
    "taze": "^19.1.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "unbuild": "^3.5.0",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm test && pnpm check:type && pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "eslint --fix .",
      "prettier --write ."
    ]
  }
}
