{
  "name": "cr-asst",
  "type": "module",
  "version": "0.9.2",
  "packageManager": "pnpm@10.5.2",
  "description": "A Node.js package starter template.",
  "author": "mys1024",
  "license": "MIT",
  "homepage": "https://github.com/mys1024/cr-asst#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mys1024/cr-asst.git"
  },
  "keywords": [
    "template"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "main": "./dist/index.js",
  "bin": {
    "cr-asst": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "cli": "tsx src/cli.ts",
    "cli:watch": "tsx watch src/cli.ts",
    "build": "tsup --format esm --dts --clean src/index.ts src/cli.ts && cp -r src/prompts dist/prompts",
    "test": "vitest",
    "test:cover": "vitest --coverage",
    "check": "run-p check:*",
    "check:lint": "eslint .",
    "check:format": "prettier --check .",
    "taze": "taze -I",
    "bump": "bumpp"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "execa": "^9.5.2",
    "openai": "^4.85.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/node": "^22.13.5",
    "@vitest/coverage-v8": "^3.0.7",
    "bump": "^0.2.5",
    "bumpp": "^10.0.3",
    "eslint": "^9.21.0",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.5.2",
    "taze": "^18.6.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.25.0",
    "vitest": "^3.0.7"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
